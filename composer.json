{
	"name": "mangoweb/minor",
	"description": "ManGoweb's WordPress project boilerplate.",
	"require": {
		"php": "~5.5",
		"wordpress/wordpress": "*",
		"nette/nette": "~2.2.0",
		"dibi/dibi": "~2.2.0",
		"petrp/orm": "~0.4.0",
		"kdyby/console": "~2.3.0",
		"kdyby/monolog": "dev-master#e45b7c3",
		"doctrine/dbal": "~2.4.0",
		"nextras/migrations": "~2.3.0"
	},
	"require-dev": {
		"nette/tester": "~1.2.0",
		"mikulas/lattecs": "~0.3",
		"mikulas/code-sniffs": "~1.3",
		"mikulas/adminer-package": "~4.0",
		"symfony/process": "~2.4",
		"jdorn/sql-formatter": "~1.2.17",
		"oodle/inflect": "~0.2.0"
	},
	"authors": [
		{
			"name": "ViliamKopecky",
			"email": "vk@viliamkopecky.cz"
		},
		{
			"name": "Matej Simek",
			"email": "email@matejsimek.com",
			"homepage": "http://www.matejsimek.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		},
		{
			"type": "composer",
			"url": "http://orm.petrprochazka.com/composer"
		},
		{
			"type": "package",
			"package": {
				"name": "wordpress/wordpress",
				"type": "webroot",
				"version": "4.0",
				"dist": {
					"type": "zip",
					"url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
				},
				"require": {
					"fancyguy/webroot-installer": "1.1.0"
				}
			}
		}
	],
	"extra": {
		"installer-paths": {
			"public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin", "type:wordpress-plugin"],
			"public/wp-content/themes/{$name}": ["type:wordpress-theme"]
		},
		"webroot-dir": "public/wp-core",
		"webroot-package": "wordpress/wordpress"
	},
	"config": {
		"preferred-install": "dist",
		"optimize-autoloader": true
	},
	"minimum-stability": "stable",
	"scripts": {
		"post-update-cmd": ["echo Warning: Deleting all .git dirs under vendor ", "rm -rf vendor/**/**/.git"],
		"post-install-cmd": ["echo Warning: Deleting all .git dirs under vendor", "rm -rf vendor/**/**/.git"]
	}
}
