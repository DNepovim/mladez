{
  "src_folder": "theme",
  "dist_folder": "public/assets",
  "styles": [
    "theme/styles/index.styl",
    "theme/styles/oldie.styl",
    "theme/styles/print.styl",
    "theme/styles/admin/index.styl"
  ],
  "scripts": [
    "theme/scripts/index.es6",
    "theme/scripts/admin.es6"
  ],
  "images": [
    "theme/images/**/*.{jpg,png,gif}"
  ],
  "static": [
    "theme/libs/**",
    "theme/images/**/*.svg",
    "theme/fonts/**",
    "node_modules/lt-ie-9/lt-ie-9.min.js"
  ],
  "dependencies": [
    "bootstrap-styl",
    "jquery",
    "lt-ie-9",
    "stylus-normalize"
  ],
  "watch": [
    "theme/**/*.{latte,php}"
  ],
  "hooks": {
    "init": "mango install"
  },
  "snippet": "yes please",
  "version": ">=0.24"
}
