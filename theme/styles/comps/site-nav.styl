.site-nav
	.menu-item
		display inline-block

		a
			position relative
			display block
			color $text-color
			font-size 1.4rem
			margin-right 1em

			&:before
				content ''
				display block
				absolute bottom 0 left 0
				transform translateY(-50%)
				size 0 1px
				background-color $text-color
				transition width 300ms

			&:hover
			.view-active &
				text-decoration none

				&:before
					width 100%
